---
import "../styles/global.scss";
const {pagenavigation} = Astro.props;
---

<nav class="main-menu">
  <input type="checkbox" id="check" />
  <label for="check" class="checkbtn">
    <i class="fa-solid fa-bars" style="color: #ffffff"></i>
  </label>
  <ul>
    <li><a class={pagenavigation=="home" ? "active" : ""} href="/">Home</a></li>
    <span class="spacer"></span>
    <li><a class={pagenavigation=="historia" ? "active" : ""} href="/historia">Nuestra Historia</a></li>
    <span class="spacer"></span>
    <li><a class={pagenavigation=="boda" ? "active" : ""} href="/boda">Boda</a></li>
    <span class="spacer"></span>
    <li><a class={pagenavigation=="contacto" ? "active" : ""} href="/contacto">Contacto</a></li>
    <span class="spacer"></span>
    <li><a href="#">Reservaci√≥n</a></li>
  </ul>

</nav>

<style lang="scss">
.main-menu {
  height: 80px;


  ul {
    list-style: none;
    display: flex;
    justify-content: center;
    margin: 0;
    padding: 0;
    font-family: "Alice", serif;
    font-size: 13px;
    align-items: center;

    li {
      display: inline;
      line-height: 80px;
      margin: 0 5px;

      a.active,
      a:hover {
        color: #775d4a;
      }
    }
  }

  a {
    text-decoration: none;
    color: var(--font-color);
    padding: 7px 13px;
    text-transform: uppercase;
  }
}

.checkbtn {
  font-size: 30px;
  color: var(--font-color);
  float: right;
  line-height: 80px;
  margin-right: 40px;
  cursor: pointer;
  display: none;
}

#check {
  display: none;
}

.spacer {
  width: 15px;
  height: 1px;
  background-color: #b2aeab;
}

@media (max-width: 858px) {
  .checkbtn {
    display: block;
  }
  .main-menu {
    

    ul  {
      position: fixed;
      flex-direction: column;
      justify-content: flex-start;
      width: 100%;
      height: 100vh; 
      background: #464343; 
      top: 80px;
      right: -100%;
      text-align: left;
      transition: all .5s;
      align-items: flex-start;
      z-index: 1;

      li {
        display: block;
        margin: 5px 0;
        line-height: 30px;
        padding-left: 10px;

        a {
          font-size: 16px;
        }
        a:hover, a.active{
          background: none;
          color: #ACA5A5;
        }
      }
    }
  }  

  #check:checked ~ul{
    right: -110px;
  }

  .spacer {
    display: none;
  }
}
</style>
