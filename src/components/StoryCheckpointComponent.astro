---
const { checkpointData } = Astro.props;
---

<div class="checkpoint-container">
  <div class="middle-line"></div>
  <h3 class:list={[checkpointData.direction]}>{checkpointData.title}</h3>
  <p class:list={["checkpoint-description", checkpointData.direction, "text-center"]}>{checkpointData.description}</p>
  <div class="checkpoint-icon">
    <i class={checkpointData.icon}></i>
  </div>
  <div class="checkpoint-image">
    <img src={checkpointData.image} alt={checkpointData.imageAlt} />
  </div>
</div>

<style lang="scss">

  .middle-line {
    position: absolute;
    width: 2px;
    height: 380px;
    background: #A3968D;
    transform: translateX(-50%);
    left: 50%;
  }

  .checkpoint-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-areas: "left right";
    align-items: center;
    padding-top: 70px;
    padding-bottom: 70px;
    height: 380px;
    max-width: 1200px;
    margin: auto;
  }

  h3 {
    align-self: baseline;
    text-align: center;
    line-height: 2.5rem;
    
    &.left {
      grid-area: left;
    }
    &.right {
      grid-area: right;
    }
  }

  .checkpoint-description {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 15px;
    grid-area: left;
    text-align: center;
    transform: translateY(20px);
    max-width: 65%;
    margin: auto;

    &.left {
      grid-area: left;
    }
    &.right {
      grid-area: right;
    }

    p {
      max-width: 370px;
      text-align: center;
    }
  }

  .checkpoint-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #a3968d;
    border-radius: 50%;
    position: absolute;
    margin: auto;
    left: 50%;
    transform: translate(-50%, 0);

    i {
      color: #d9d9d9;
    }
  }

  .checkpoint-image {
    width: 240px;
    height: 240px;
    overflow: hidden;
    border-radius: 50%;
    margin: auto;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media only screen and (min-width: 1200px) {
    .middle-line {
      height: 440px;
    }

    .checkpoint-container {
      height: 440px;
    }

    .checkpoint-image {
      width: 300px;
      height: 300px;
    }

    h3 {
      margin-top: 2.5rem;
      font-size: 4.5rem;
    }
  }

  @media only screen and (max-width: 780px) {
    h3 {
      font-size: 3.5rem;
    }
     .checkpoint-description {
      font-size: inherit;
    }
  }

  @media only screen and (max-width: 620px) {
    .middle-line {
      height: 100px;
      grid-area: icon;
      position: relative;
    }

    .checkpoint-container {
      grid-template-columns: 1fr;
      grid-template-areas:
        "tittle"
        "imagen"
        "description"
        "icon";
      gap: 2ch;
      padding: 0;
      height: auto;
    }
    
    h3 {
      grid-area: tittle !important;
      line-height: normal;
    }

    .checkpoint-description {
      grid-area: description !important;
      max-width: 95%;
    }

    .checkpoint-image {
      grid-area: imagen;
    }

    .checkpoint-icon {
      grid-area: icon;
      grid-area: icon;
      position: inherit;
      transform: none;
      margin: 40px auto;
      z-index: 1;
    }
  }
</style>
