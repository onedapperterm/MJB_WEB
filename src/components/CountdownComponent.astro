---
import "../styles/global.scss";
---

<section class="countdown-section">
  <div
    class="countdown-img-container"
    style="background-image:url(https://firebasestorage.googleapis.com/v0/b/mjb-web-ae899.appspot.com/o/ASSETS%2FFlores.png?alt=media&token=3e4a98d2-d388-4bff-8bd5-7f47b4475d0d)"
  >
  </div>

  <p class="wedding-date">21 de Diciembre de 2024</p>
  <p>EL GRAN DÍA</p>

  <div class="countdown-container">
    <div class="countdown-unit">
      <h1 id="days">-</h1>
      <p>Día(s)</p>
    </div>
    <div class="countdown-unit">
      <h1 id="hours">-</h1>
      <p>Hora(s)</p>
    </div>
    <div class="countdown-unit">
      <h1 id="minutes">-</h1>
      <p>Minuto(s)</p>
    </div>
    <div class="countdown-unit">
      <h1 id="seconds">-</h1>
      <p>Segundo(s)</p>
    </div>
  </div>
</section>

<style lang="scss">

  .countdown-section {
    background-color: white;
    padding: 15ch 5px;
    text-align: center;
    position: relative;
    overflow: hidden;

    .wedding-date {
      font-size: 40px;
      position: relative;
    }
    p {
      font-size: 20px;
      margin: 10px;
    }
  }

  .countdown-container {
    max-width: 650px;
    margin: auto;
    display: flex;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    padding: 15px 100px;
    position: relative;

    h1 {
      color: #b18552;
      font-size: 80px;
      margin-bottom: 0%;
      margin-top: 0%;
    }

    p {
      color: var(--font-dark-color);
      font-size: 15px;
      margin: 0%;
    }
  }

  .countdown-img-container {
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin: auto;
    left: 50%;
    transform: translateX(-50%);
    top: 0%;
    max-width: 700px;
  }


  @media only screen and (min-width: 890px) {
    .countdown-unit {
      h1 {
        font-size: 130px;
      }
      p {
        font-size: 20px;
        margin: 0;
      }
    }
  }

  @media only screen and (max-width: 620px) {
    .countdown-unit {
      h1 {
        font-size: 100px;
      }
      p {
        font-size: 12px;
        margin: 0;
      }
    }
    .countdown-container {
      padding: 0px 40px;
    }

    .countdown-section {
      .wedding-date {
        font-size: 27px;
      }
      p {
        font-size: 17px;
        margin: 1ch;
      }
    }
  }

  @media only screen and (max-width: 420px) {
    .countdown-unit {
      h1 {
        font-size: 70px;
      }
      p {
        font-size: 12px;
        margin: 0;
      }
    }
  }
</style>

<script>
  var countDownDate = new Date("Dec 21, 2024 00:00:00").getTime();
  var interval = setInterval(() => {
    var now = new Date().getTime();
    var distance = countDownDate - now;

    var days = Math.floor(distance / (1000 * 60 * 60 * 24));
    var hours = Math.floor(
      (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((distance % (1000 * 60)) / 1000);

    var daysElement = document.getElementById("days");
    if (daysElement?.innerHTML) daysElement.innerHTML = String(days);
    var hoursElement = document.getElementById("hours");
    if (hoursElement?.innerHTML) hoursElement.innerHTML = String(hours);
    var minutesElement = document.getElementById("minutes");
    if (minutesElement?.innerHTML) minutesElement.innerHTML = String(minutes);
    var secondsElement = document.getElementById("seconds");
    if (secondsElement?.innerHTML) secondsElement.innerHTML = String(seconds);
  }, 1000);
</script>
